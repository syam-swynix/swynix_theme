<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Swynix Login Preview</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            overflow: hidden;
        }

        /* Main container - Force horizontal layout */
        .for-login {
            background: transparent;
            min-height: 100vh;
            height: 100vh;
            display: flex;
            flex-direction: row;
            align-items: stretch;
            justify-content: flex-start;
            margin: 0;
            padding: 0;
            overflow: hidden;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
        }

        /* Left side - Logo section */
        .logo-section {
            width: 50%;
            min-height: 100vh;
            background: #1a2332;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        /* Golden waves at bottom - exactly like reference image */
        .logo-section::before {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 40%;
            background: transparent;
            z-index: 1;
        }

        /* Wave SVG pattern */
        .waves {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 300px;
            z-index: 1;
        }

        .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.4;
        }

        .wave:nth-child(1) {
            opacity: 0.2;
            animation: wave1 8s ease-in-out infinite;
        }

        .wave:nth-child(2) {
            opacity: 0.3;
            animation: wave2 10s ease-in-out infinite;
        }

        .wave:nth-child(3) {
            opacity: 0.5;
            animation: wave3 12s ease-in-out infinite;
        }

        @keyframes wave1 {
            0%, 100% { transform: translateX(0) translateY(0); }
            50% { transform: translateX(-25px) translateY(-10px); }
        }

        @keyframes wave2 {
            0%, 100% { transform: translateX(0) translateY(0); }
            50% { transform: translateX(25px) translateY(-15px); }
        }

        @keyframes wave3 {
            0%, 100% { transform: translateX(0) translateY(0); }
            50% { transform: translateX(-20px) translateY(-20px); }
        }

        /* Logo */
        .logo-section .logo {
            width: 280px;
            height: auto;
            z-index: 2;
            position: relative;
        }

        .logo-section .logo img {
            width: 100%;
            height: auto;
            object-fit: contain;
        }

        /* Right side - Form section */
        .login-content {
            width: 50%;
            min-height: 100vh;
            background: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 80px 100px;
            position: relative;
            z-index: 10;
        }

        .page-card {
            width: 100%;
            max-width: 500px;
        }

        /* Header */
        .page-card-head {
            text-align: left;
            margin-bottom: 40px;
        }

        .page-card-head h4 {
            font-size: 48px;
            font-weight: 700;
            color: #000;
            margin-bottom: 15px;
        }

        .page-card-head p {
            font-size: 16px;
            color: #666;
            font-weight: 400;
        }

        /* Form styling */
        .form-group {
            margin-bottom: 25px;
        }

        .form-group label {
            font-size: 15px;
            font-weight: 500;
            color: #000;
            margin-bottom: 10px;
            display: block;
        }

        .form-control {
            height: 52px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 15px;
            width: 100%;
            transition: all 0.3s ease;
            background: #ffffff;
        }

        .form-control:focus {
            border-color: #FFC107;
            box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.1);
            outline: none;
        }

        .password-field {
            position: relative;
        }

        #login_password {
            padding-right: 80px;
        }

        .toggle-password {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            z-index: 10;
            color: #666;
            font-size: 14px;
            user-select: none;
            background: transparent;
            border: none;
            padding: 5px 10px;
        }

        .toggle-password:hover {
            color: #FFC107;
        }

        /* Remember me and Forgot password row */
        .remember-forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .remember-me {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        }

        .remember-me input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .remember-me span {
            font-size: 14px;
            color: #000;
        }

        .forgot-link {
            color: #666;
            font-size: 14px;
            text-decoration: none;
        }

        .forgot-link:hover {
            color: #FFC107;
        }

        /* Login button */
        .btn-primary {
            width: 100%;
            height: 56px;
            background: #0a1628;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .btn-primary:hover {
            background: #1a2942;
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(10, 22, 40, 0.3);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        /* Sign up message */
        .sign-up-message {
            position: absolute;
            bottom: 30px;
            right: 100px;
            text-align: center;
            color: #666;
            z-index: 11;
            font-size: 14px;
        }

        .sign-up-message a {
            color: #FFC107;
            text-decoration: none;
            font-weight: 500;
        }

        .sign-up-message a:hover {
            text-decoration: underline;
        }

        /* Responsive design */
        @media (max-width: 992px) {
            .login-content {
                padding: 60px 60px;
            }
            
            .sign-up-message {
                right: 60px;
            }
        }

        @media (max-width: 768px) {
            .for-login {
                position: relative;
                height: auto;
                flex-direction: column;
            }

            .logo-section {
                width: 100%;
                min-height: 200px;
            }

            .logo-section .logo {
                width: 150px;
                height: 150px;
                font-size: 60px;
            }
            
            .login-content {
                width: 100%;
                padding: 40px 30px;
            }
            
            .page-card-head h4 {
                font-size: 36px;
            }
            
            .sign-up-message {
                position: static;
                margin-top: 20px;
                right: auto;
            }
        }

        @media (max-width: 480px) {
            .login-content {
                padding: 30px 20px;
            }
            
            .page-card-head h4 {
                font-size: 32px;
            }
            
            .remember-forgot {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="for-login">
        <!-- Left Side - Logo Section -->
        <div class="logo-section">
            <div class="logo">
                <!-- Replace with your actual logo path -->
                <img src="/assets/swynix_theme/images/swynix-logo.png" alt="Swynix Logo" 
                     onerror="this.parentElement.innerHTML='<div style=\'font-size: 120px; color: #FFC107; font-weight: 700;\'>S</div>'">
            </div>
            
            <!-- Golden Waves SVG -->
            <div class="waves">
                <svg class="wave" viewBox="0 0 1440 320" preserveAspectRatio="none">
                    <path fill="#D4A017" fill-opacity="1" d="M0,192L48,176C96,160,192,128,288,133.3C384,139,480,181,576,186.7C672,192,768,160,864,149.3C960,139,1056,149,1152,154.7C1248,160,1344,160,1392,160L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
                </svg>
                <svg class="wave" viewBox="0 0 1440 320" preserveAspectRatio="none">
                    <path fill="#FFC107" fill-opacity="1" d="M0,224L48,213.3C96,203,192,181,288,181.3C384,181,480,203,576,213.3C672,224,768,224,864,208C960,192,1056,160,1152,154.7C1248,149,1344,171,1392,181.3L1440,192L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
                </svg>
                <svg class="wave" viewBox="0 0 1440 320" preserveAspectRatio="none">
                    <path fill="#FFD700" fill-opacity="1" d="M0,256L48,240C96,224,192,192,288,181.3C384,171,480,181,576,197.3C672,213,768,235,864,229.3C960,224,1056,192,1152,181.3C1248,171,1344,181,1392,186.7L1440,192L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
                </svg>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-content">
            <div class="page-card">
                <div class="page-card-head">
                    <h4>Login</h4>
                    <p>Welcome back! Please login to your account.</p>
                </div>

                <form class="form-signin form-login" role="form">
                    <div class="form-group">
                        <label for="login_email">Email</label>
                        <div class="email-field">
                            <input type="text" id="login_email" class="form-control"
                                placeholder="username@example.com" required autofocus autocomplete="username">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="login_password">Password</label>
                        <div class="password-field">
                            <input type="password" id="login_password" class="form-control" 
                                placeholder="•••••••••" autocomplete="current-password" required>
                            <span class="toggle-password" onclick="togglePassword()">Show</span>
                        </div>
                    </div>

                    <div class="remember-forgot">
                        <label class="remember-me">
                            <input type="checkbox" id="remember_me">
                            <span>Remember Me</span>
                        </label>
                        <a href="#forgot" class="forgot-link">Forgot password?</a>
                    </div>

                    <button class="btn-primary" type="submit">Login</button>
                </form>
            </div>

            <div class="sign-up-message">
                Don't have an account? <a href="#signup">Sign up</a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('login_password');
            const toggleButton = document.querySelector('.toggle-password');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleButton.textContent = 'Hide';
            } else {
                passwordField.type = 'password';
                toggleButton.textContent = 'Show';
            }
        }

        // Prevent form submission for preview
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('This is a preview. Login functionality will work after implementation.');
        });
    </script>
</body>
</html>
